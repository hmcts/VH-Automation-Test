{
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${configsetting:item=SystemConfiguration.LogLocation}/${date:format=yyyy-MM-dd-HH-mm-ss.fff:cached=true}-${configsetting:item=SystemConfiguration.LogSuffix}.log",
        "layout": "${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString}",
        "archiveFileName": "${basedir}/logs/archives/${shortdate}.{#}.log",
        "archiveAboveSize": 5242880,
        "archiveEvery": "Day",
        "archiveNumbering": "Rolling",
        "maxArchiveFiles": 20
      },
      "logconsole": {
        "type": "Console"
      }
    },
      "rules": [
        {
          "logger": "*",
          "minLevel": "Trace",
          "writeTo": "logconsole"
        },
        {
          "logger": "*",
          "minLevel": "Trace",
          "writeTo": "logfile"
        }
      ]
    },
  "SystemConfiguration": {
    "LogSuffix": "EndToEndTest",
    "LogLocation": "../../../TestResults/Logs",

    "DevelopmentEnvironmentConfigSettings": {
      "environment": "Development",
      "_authority" : "https://login.microsoftonline.com/"

    },

    "AcceptanceEnvironmentConfigSettings": {
      "environment": "Acceptance",
      "_authority" : "https://login.microsoftonline.com/"
    }
  }
  }